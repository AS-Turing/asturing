{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <i class="fas fa-clipboard-list"></i> {{ specificationBook.title }}
{% endblock %}

{% block main %}
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Remplissez ces questions avec votre client pendant le rendez-vous.
    </div>

    {{ form_start(form) }}
    
    {# Informations générales #}
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0"><i class="fas fa-info-circle"></i> Informations générales</h5>
        </div>
        <div class="card-body">
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
        </div>
    </div>

    {# Questions par sections #}
    {% set sections = {
        'Contact': [1, 2, 3, 4, 5],
        'Contexte entreprise': [6, 7],
        'Objectifs du projet': [8, 9],
        'Cibles & Utilisateurs': [13, 14],
        'Contenu': [15, 16, 17, 18],
        'Design & UX': [19, 20, 21, 22],
        'Fonctionnalités': [23, 24, 25],
        'Technique & Infrastructure': [26, 27, 28],
        'SEO & Marketing': [29, 30, 31],
        'Juridique & Conformité': [32, 33, 34, 35],
        'Collaboration & Suivi': [36, 37, 38],
        'Maintenance & Évolution': [39, 40],
        'Budget & Planning': [10, 11, 12],
        'Contraintes & Remarques': [41, 42]
    } %}

    {% set section_icons = {
        'Contact': 'fa-user',
        'Contexte entreprise': 'fa-building',
        'Objectifs du projet': 'fa-bullseye',
        'Cibles & Utilisateurs': 'fa-users',
        'Contenu': 'fa-file-alt',
        'Design & UX': 'fa-paint-brush',
        'Fonctionnalités': 'fa-cogs',
        'Technique & Infrastructure': 'fa-server',
        'SEO & Marketing': 'fa-chart-line',
        'Juridique & Conformité': 'fa-balance-scale',
        'Collaboration & Suivi': 'fa-handshake',
        'Maintenance & Évolution': 'fa-tools',
        'Budget & Planning': 'fa-euro-sign',
        'Contraintes & Remarques': 'fa-exclamation-triangle'
    } %}

    {% for section_name, question_orders in sections %}
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas {{ section_icons[section_name] }}"></i> {{ section_name }}
                </h5>
            </div>
            <div class="card-body">
                {% for child in form.children %}
                    {% if child.vars.name not in ['title', 'description', '_token'] %}
                        {% set question_id = child.vars.name|replace({'question_': ''}) %}
                        {% if question_id in question_orders %}
                            <div class="mb-3">
                                {{ form_row(child, {'row_attr': {'class': 'form-group'}}) }}
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endfor %}

    <div class="form-actions">
        <a href="/admin" class="btn btn-secondary">
            <i class="fa fa-arrow-left"></i> Retour
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i> Enregistrer
        </button>
    </div>

    {{ form_end(form) }}
    
    <style>
        /* Labels au-dessus des inputs */
        .form-group {
            margin-bottom: 1.5rem;
            display: flex;
            flex-direction: column;
        }
        
        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }
        
        .form-control, .form-select {
            width: 100%;
        }
        
        /* Espacement pour les textarea */
        textarea.form-control {
            min-height: 100px;
        }
        
        /* Radio et checkbox en colonne */
        .form-group > div {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }
        
        .form-group > div > input[type="radio"],
        .form-group > div > input[type="checkbox"] {
            display: none;
        }
        
        .form-group > div > label {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border: 1px solid var(--border-color);
            border-radius: 0.375rem;
            cursor: pointer;
            transition: all 0.2s;
            background-color: var(--body-bg);
        }
        
        .form-group > div > label:hover {
            border-color: var(--text-muted);
            background-color: var(--gray-200);
        }
        
        .form-group > div > input[type="radio"]:checked + label,
        .form-group > div > input[type="checkbox"]:checked + label {
            border-color: var(--color-primary);
            background-color: rgba(var(--color-primary-rgb), 0.1);
            font-weight: 500;
        }
        
        .form-group > div > label::before {
            content: '';
            display: inline-block;
            width: 1.25rem;
            height: 1.25rem;
            margin-right: 0.75rem;
            border: 2px solid var(--border-color);
            border-radius: 50%;
            transition: all 0.2s;
            background-color: var(--body-bg);
        }
        
        .form-group > div > input[type="radio"]:checked + label::before {
            border-color: var(--color-primary);
            background-color: var(--color-primary);
            box-shadow: inset 0 0 0 3px var(--body-bg);
        }
        
        .form-group > div > input[type="checkbox"]:checked + label::before {
            border-color: var(--color-primary);
            background-color: var(--color-primary);
            border-radius: 0.25rem;
        }
        
        /* Cacher le "None" placeholder */
        .form-group > div > input[value=""] + label {
            display: none;
        }
        
        /* Help text sous l'input */
        .help-text {
            margin-top: 0.25rem;
            font-size: 0.875rem;
            color: var(--text-muted);
        }
    </style>
{% endblock %}
